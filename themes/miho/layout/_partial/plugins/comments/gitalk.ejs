<div id='comments'></div> 
<link rel="stylesheet" href="https://lib.baomitu.com/gitalk/1.7.2/gitalk.min.css">
<script src="https://lib.baomitu.com/gitalk/1.7.2/gitalk.min.js"></script>
<script>
    const gitalk = new Gitalk({
    clientID: '<%- theme.gitment.client_id || process.env.gitalk_client_id %>',
    clientSecret: '<%- theme.gitment.client_secret || process.env.gitalk_client_secret %>',
    repo: '<%- theme.gitment.repo %>',     
    owner: '<%- theme.gitment.owner %>',
    admin: ['<%- theme.gitment.owner %>'],
    id: '<%= page.date %>',      // Ensure uniqueness and length less than 50
    distractionFreeMode: false  // Facebook-like distraction free mode
    })

    gitalk.render('comments')
</script>